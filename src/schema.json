{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "description": "Intermediate Representation (IR) of a service",
  "required": [
    "basketry",
    "title",
    "majorVersion",
    "sourcePath",
    "interfaces",
    "types",
    "enums",
    "unions",
    "loc"
  ],
  "properties": {
    "$schema": { "type": "string" },
    "basketry": { "type": "string", "const": "1" },
    "title": { "$ref": "#/definitions/string" },
    "majorVersion": { "$ref": "#/definitions/integer" },
    "sourcePath": {
      "type": "string",
      "description": "The path to the original source document for this service. All locations in the Intermediate Representation refer to ranges within this source document."
    },
    "interfaces": {
      "type": "array",
      "items": { "$ref": "#/definitions/interface" }
    },
    "types": {
      "type": "array",
      "items": { "$ref": "#/definitions/type" }
    },
    "enums": {
      "type": "array",
      "items": { "$ref": "#/definitions/enum" }
    },
    "unions": {
      "type": "array",
      "items": { "$ref": "#/definitions/union" }
    },
    "loc": { "$ref": "#/definitions/range" }
  },
  "additionalProperties": false,
  "definitions": {
    "string": {
      "type": "object",
      "required": ["value"],
      "properties": {
        "value": { "type": "string" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "integer": {
      "type": "object",
      "required": ["value"],
      "properties": {
        "value": { "type": "integer" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "number": {
      "type": "object",
      "required": ["value"],
      "properties": {
        "value": { "type": "number" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "nonNegativeInteger": {
      "type": "object",
      "required": ["value"],
      "properties": {
        "value": { "type": "integer", "minimum": 0 },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "nonNegativeNumber": {
      "type": "object",
      "required": ["value"],
      "properties": {
        "value": { "type": "number", "minimum": 0 },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "range": { "type": "string" },
    "interface": {
      "type": "object",
      "required": ["name", "methods", "protocols"],
      "properties": {
        "name": { "type": "string" },
        "description": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "methods": {
          "type": "array",
          "items": { "$ref": "#/definitions/method" }
        },
        "protocols": {
          "type": "object",
          "required": ["http"],
          "properties": {
            "http": {
              "type": "array",
              "items": { "$ref": "#/definitions/httpPath" }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "type": {
      "type": "object",
      "required": ["name", "properties", "rules", "loc"],
      "properties": {
        "name": { "$ref": "#/definitions/string" },
        "description": {
          "oneOf": [
            { "$ref": "#/definitions/string" },
            { "type": "array", "items": { "$ref": "#/definitions/string" } }
          ]
        },
        "properties": {
          "type": "array",
          "items": { "$ref": "#/definitions/property" }
        },
        "rules": {
          "type": "array",
          "items": { "$ref": "#/definitions/objectValidationRule" }
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "enum": {
      "type": "object",
      "required": ["name", "values", "loc"],
      "properties": {
        "name": { "$ref": "#/definitions/string" },
        "values": {
          "type": "array",
          "items": { "$ref": "#/definitions/string" },
          "minItems": 1
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "union": {
      "type": "object",
      "properties": {
        "name": { "$ref": "#/definitions/string" },
        "members": {
          "type": "array",
          "items": { "$ref": "#/definitions/typedValue" },
          "minItems": 1
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "primitive": {
      "type": "string",
      "enum": [
        "string",
        "number",
        "integer",
        "long",
        "float",
        "double",
        "boolean",
        "date",
        "date-time",
        "untyped"
      ]
    },
    "primitiveValue": {
      "type": "object",
      "required": ["typeName", "isArray", "isPrimitive", "rules"],
      "properties": {
        "typeName": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": { "$ref": "#/definitions/primitive" },
            "loc": { "$ref": "#/definitions/range" }
          }
        },
        "isArray": { "type": "boolean" },
        "isPrimitive": { "type": "boolean", "const": true },
        "rules": {
          "type": "array",
          "items": { "$ref": "#/definitions/validationRule" }
        }
      }
    },
    "customValue": {
      "type": "object",
      "required": ["typeName", "isArray", "isPrimitive", "rules"],
      "properties": {
        "typeName": { "$ref": "#/definitions/string" },
        "isArray": { "type": "boolean" },
        "isPrimitive": { "type": "boolean", "const": false },
        "rules": {
          "type": "array",
          "items": { "$ref": "#/definitions/validationRule" }
        }
      }
    },
    "typedValue": {
      "oneOf": [
        { "$ref": "#/definitions/primitiveValue" },
        { "$ref": "#/definitions/customValue" }
      ]
    },
    "property": {
      "type": "object",
      "allOf": [
        {
          "type": "object",
          "required": ["name", "loc"],
          "properties": {
            "name": { "$ref": "#/definitions/string" },
            "description": {
              "oneOf": [
                { "$ref": "#/definitions/string" },
                { "type": "array", "items": { "$ref": "#/definitions/string" } }
              ]
            },
            "loc": { "$ref": "#/definitions/range" }
          }
        },
        { "$ref": "#/definitions/typedValue" }
      ]
    },
    "method": {
      "type": "object",
      "required": ["name", "security", "parameters", "loc"],
      "properties": {
        "name": { "$ref": "#/definitions/string" },
        "security": {
          "type": "array",
          "items": { "$ref": "#/definitions/securityOption" }
        },
        "description": {
          "oneOf": [
            { "$ref": "#/definitions/string" },
            { "type": "array", "items": { "$ref": "#/definitions/string" } }
          ]
        },
        "parameters": {
          "type": "array",
          "items": { "$ref": "#/definitions/parameter" }
        },
        "returnType": { "$ref": "#/definitions/returnType" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "parameter": {
      "type": "object",
      "allOf": [
        {
          "type": "object",
          "required": ["name", "loc"],
          "properties": {
            "name": { "$ref": "#/definitions/string" },
            "description": {
              "oneOf": [
                { "$ref": "#/definitions/string" },
                { "type": "array", "items": { "$ref": "#/definitions/string" } }
              ]
            },
            "loc": { "$ref": "#/definitions/range" }
          }
        },
        { "$ref": "#/definitions/typedValue" }
      ]
    },
    "returnType": {
      "type": "object",
      "allOf": [
        {
          "type": "object",
          "required": ["loc"],
          "properties": {
            "loc": { "$ref": "#/definitions/range" }
          }
        },
        { "$ref": "#/definitions/typedValue" }
      ]
    },
    "httpPath": {
      "type": "object",
      "required": ["path", "methods", "loc"],
      "properties": {
        "path": { "$ref": "#/definitions/string" },
        "methods": {
          "type": "array",
          "items": { "$ref": "#/definitions/httpMethod" }
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "httpMethod": {
      "type": "object",
      "required": ["name", "verb", "parameters", "successCode", "loc"],
      "properties": {
        "name": { "$ref": "#/definitions/string" },
        "verb": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": {
              "type": "string",
              "enum": [
                "get",
                "post",
                "put",
                "patch",
                "delete",
                "head",
                "options",
                "trace"
              ]
            },
            "loc": { "$ref": "#/definitions/range" }
          },
          "additionalProperties": false
        },
        "parameters": {
          "type": "array",
          "items": { "$ref": "#/definitions/httpParameter" }
        },
        "successCode": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": {
              "type": "integer",
              "minimum": 100
            },
            "loc": { "$ref": "#/definitions/range" }
          },
          "additionalProperties": false
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "httpParameter": {
      "type": "object",
      "required": ["name", "in", "loc"],
      "properties": {
        "name": { "$ref": "#/definitions/string" },
        "in": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": {
              "type": "string",
              "enum": ["header", "query", "path", "formData", "body"]
            },
            "loc": { "$ref": "#/definitions/range" }
          },
          "additionalProperties": false
        },
        "array": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": {
              "type": "string",
              "enum": ["csv", "ssv", "tsv", "pipes", "multi"]
            },
            "loc": { "$ref": "#/definitions/range" }
          },
          "additionalProperties": false
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "securityOption": {
      "type": "array",
      "items": { "$ref": "#/definitions/securityScheme" }
    },
    "securityScheme": {
      "oneOf": [
        { "$ref": "#/definitions/basicScheme" },
        { "$ref": "#/definitions/apiKeyScheme" },
        { "$ref": "#/definitions/oauth2Scheme" }
      ]
    },
    "basicScheme": {
      "type": "object",
      "required": ["type", "name", "loc"],
      "properties": {
        "type": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": {
              "type": "string",
              "const": "basic"
            },
            "loc": { "$ref": "#/definitions/range" }
          },
          "additionalProperties": false
        },
        "name": { "$ref": "#/definitions/string" },
        "description": { "$ref": "#/definitions/string" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "apiKeyScheme": {
      "type": "object",
      "required": ["type", "name", "parameter", "in", "loc"],
      "properties": {
        "type": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": {
              "type": "string",
              "const": "apiKey"
            },
            "loc": { "$ref": "#/definitions/range" }
          },
          "additionalProperties": false
        },
        "name": { "$ref": "#/definitions/string" },
        "description": { "$ref": "#/definitions/string" },
        "parameter": { "$ref": "#/definitions/string" },
        "in": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": {
              "type": "string",
              "enum": ["header", "query", "cookie"]
            },
            "loc": { "$ref": "#/definitions/range" }
          },
          "additionalProperties": false
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "oauth2Scheme": {
      "type": "object",
      "required": ["type", "name", "flows", "loc"],
      "properties": {
        "type": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": { "type": "string", "const": "oauth2" },
            "loc": { "$ref": "#/definitions/range" }
          },
          "additionalProperties": false
        },
        "name": { "$ref": "#/definitions/string" },
        "description": { "type": "string" },
        "flows": {
          "type": "array",
          "items": { "$ref": "#/definitions/oauth2Flow" }
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "oauth2Flow": {
      "oneOf": [
        { "$ref": "#/definitions/oauth2ImplicitFlow" },
        { "$ref": "#/definitions/oauth2PasswordFlow" },
        { "$ref": "#/definitions/oauth2ClientCredentialsFlow" },
        { "$ref": "#/definitions/oauth2AuthorizationCodeFlow" }
      ]
    },
    "oauth2ImplicitFlow": {
      "type": "object",
      "required": ["type", "authorizationUrl", "scopes", "loc"],
      "properties": {
        "type": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": { "type": "string", "const": "implicit" },
            "loc": { "$ref": "#/definitions/range" }
          },
          "additionalProperties": false
        },
        "authorizationUrl": { "$ref": "#/definitions/string" },
        "refreshUrl": { "$ref": "#/definitions/string" },
        "scopes": {
          "type": "array",
          "items": { "$ref": "#/definitions/oauth2Scope" }
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "oauth2PasswordFlow": {
      "type": "object",
      "required": ["type", "tokenUrl", "scopes", "loc"],
      "properties": {
        "type": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": { "type": "string", "const": "password" },
            "loc": { "$ref": "#/definitions/range" }
          },
          "additionalProperties": false
        },
        "tokenUrl": { "type": "string" },
        "refreshUrl": { "type": "string" },
        "scopes": {
          "type": "array",
          "items": { "$ref": "#/definitions/oauth2Scope" }
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "oauth2ClientCredentialsFlow": {
      "type": "object",
      "required": ["type", "tokenUrl", "scopes", "loc"],
      "properties": {
        "type": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": { "type": "string", "const": "clientCredentials" },
            "loc": { "$ref": "#/definitions/range" }
          },
          "additionalProperties": false
        },
        "tokenUrl": { "$ref": "#/definitions/string" },
        "refreshUrl": { "$ref": "#/definitions/string" },
        "scopes": {
          "type": "array",
          "items": { "$ref": "#/definitions/oauth2Scope" }
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "oauth2AuthorizationCodeFlow": {
      "type": "object",
      "required": ["type", "authorizationUrl", "tokenUrl", "scopes", "loc"],
      "properties": {
        "type": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": { "type": "string", "const": "authorizationCode" },
            "loc": { "$ref": "#/definitions/range" }
          },
          "additionalProperties": false
        },
        "authorizationUrl": { "$ref": "#/definitions/string" },
        "tokenUrl": { "$ref": "#/definitions/string" },
        "refreshUrl": { "$ref": "#/definitions/string" },
        "scopes": {
          "type": "array",
          "items": { "$ref": "#/definitions/oauth2Scope" }
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "oauth2Scope": {
      "type": "object",
      "required": ["name", "description", "loc"],
      "properties": {
        "name": { "$ref": "#/definitions/string" },
        "description": { "$ref": "#/definitions/string" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "multilineDescription": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } }
      ]
    },
    "validationRule": {
      "oneOf": [
        { "$ref": "#/definitions/requiredRule" },
        { "$ref": "#/definitions/stringMaxLengthRule" },
        { "$ref": "#/definitions/stringMinLengthRule" },
        { "$ref": "#/definitions/stringPatternRule" },
        { "$ref": "#/definitions/stringFormatRule" },
        { "$ref": "#/definitions/stringEnumRule" },
        { "$ref": "#/definitions/numberMultipleOfRule" },
        { "$ref": "#/definitions/numberGtRule" },
        { "$ref": "#/definitions/numberGteRule" },
        { "$ref": "#/definitions/numberLtRule" },
        { "$ref": "#/definitions/numberLteRule" },
        { "$ref": "#/definitions/arrayMaxItemsRule" },
        { "$ref": "#/definitions/arrayMinItemsRule" },
        { "$ref": "#/definitions/arrayUniqueItemsRule" }
      ]
    },
    "objectValidationRule": {
      "oneOf": [
        { "$ref": "#/definitions/objectMinPropertiesRule" },
        { "$ref": "#/definitions/objectMaxPropertiesRule" },
        { "$ref": "#/definitions/objectAdditionalPropertiesRule" }
      ]
    },
    "requiredRule": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "const": "required"
        }
      },
      "additionalProperties": false
    },

    "stringMaxLengthRule": {
      "type": "object",
      "required": ["id", "length", "loc"],
      "properties": {
        "id": {
          "type": "string",
          "const": "string-max-length"
        },
        "length": { "$ref": "#/definitions/nonNegativeInteger" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "stringMinLengthRule": {
      "type": "object",
      "required": ["id", "length", "loc"],
      "properties": {
        "id": {
          "type": "string",
          "const": "string-min-length"
        },
        "length": { "$ref": "#/definitions/nonNegativeInteger" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "stringPatternRule": {
      "type": "object",
      "required": ["id", "pattern", "loc"],
      "properties": {
        "id": {
          "type": "string",
          "const": "string-pattern"
        },
        "pattern": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": { "type": "string", "minLength": 1 },
            "loc": { "$ref": "#/definitions/range" }
          },
          "additionalProperties": false
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "stringFormatRule": {
      "type": "object",
      "required": ["id", "format", "loc"],
      "properties": {
        "id": {
          "type": "string",
          "const": "string-format"
        },
        "format": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": { "type": "string", "minLength": 1 },
            "loc": { "$ref": "#/definitions/range" }
          },
          "additionalProperties": false
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "stringEnumRule": {
      "type": "object",
      "required": ["id", "values", "loc"],
      "properties": {
        "id": {
          "type": "string",
          "const": "string-enum"
        },
        "values": {
          "type": "array",
          "items": { "$ref": "#/definitions/string" },
          "minItems": 1
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "numberMultipleOfRule": {
      "type": "object",
      "required": ["id", "value", "loc"],
      "properties": {
        "id": {
          "type": "string",
          "const": "number-multiple-of"
        },
        "value": { "$ref": "#/definitions/nonNegativeNumber" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "numberGtRule": {
      "type": "object",
      "required": ["id", "value", "loc"],
      "properties": {
        "id": {
          "type": "string",
          "const": "number-gt"
        },
        "value": { "$ref": "#/definitions/number" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "numberGteRule": {
      "type": "object",
      "required": ["id", "value", "loc"],
      "properties": {
        "id": {
          "type": "string",
          "const": "number-gte"
        },
        "value": { "$ref": "#/definitions/number" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "numberLtRule": {
      "type": "object",
      "required": ["id", "value", "loc"],
      "properties": {
        "id": {
          "type": "string",
          "const": "number-lt"
        },
        "value": { "$ref": "#/definitions/number" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "numberLteRule": {
      "type": "object",
      "required": ["id", "value", "loc"],
      "properties": {
        "id": {
          "type": "string",
          "const": "number-lte"
        },
        "value": { "$ref": "#/definitions/number" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "arrayMaxItemsRule": {
      "type": "object",
      "required": ["id", "max", "loc"],
      "properties": {
        "id": {
          "type": "string",
          "const": "array-max-items"
        },
        "max": { "$ref": "#/definitions/nonNegativeNumber" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "arrayMinItemsRule": {
      "type": "object",
      "required": ["id", "min", "loc"],
      "properties": {
        "id": {
          "type": "string",
          "const": "array-min-items"
        },
        "min": { "$ref": "#/definitions/nonNegativeNumber" },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "arrayUniqueItemsRule": {
      "type": "object",
      "required": ["id", "required", "loc"],
      "properties": {
        "id": {
          "type": "string",
          "const": "array-unique-items"
        },
        "required": {
          "type": "boolean"
        },
        "loc": { "$ref": "#/definitions/range" }
      },
      "additionalProperties": false
    },
    "objectMinPropertiesRule": {
      "type": "object",
      "required": ["id", "min", "loc"],
      "properties": {
        "id": {
          "type": "string",
          "const": "object-min-properties"
        },
        "min": { "$ref": "#/definitions/nonNegativeInteger" },
